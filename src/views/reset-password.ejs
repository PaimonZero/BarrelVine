<!-- Nền rosé -->
<style>
  body {
    background-color: #f5e6e8;
    /* font-family: 'Roboto', sans-serif; */
  }
</style>

<!-- Form Reset Password -->
<div class="container d-flex justify-content-center align-items-center min-vh-100" style="margin-top: -6rem;">
  <div class="card shadow p-4" style="max-width: 460px; width: 100%; background-color: rgba(255, 255, 255, 0.9);">
    <h3 class="text-center mb-3">
      <i class="fas fa-key text-primary me-2"></i>Đặt lại mật khẩu
    </h3>

    <form action="resetForm" method="POST">
      <input type="hidden" name="token" value="<%= token %>" />

      <div class="mb-3">
        <label for="resetForm" class="form-label">Mật khẩu mới</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Nhập mật khẩu mới"
            autocomplete="new-password"
            required
          />
        </div>
      </div>

      <div class="d-grid mb-2">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-sync-alt me-2"></i>Đặt lại mật khẩu
        </button>
      </div>

      <div class="text-center">
        <a href="/auth/login" class="text-decoration-none small">← Quay lại đăng nhập</a>
      </div>
    </form>
  </div>
</div>

<script>
  document.getElementById("resetForm").action = window.location.pathname;
</script>
